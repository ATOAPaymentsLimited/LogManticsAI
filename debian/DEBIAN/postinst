#!/bin/bash
set -e

pip3 install agno>=1.5.0 click>=8.1.7 openai>=1.10.0 python-dotenv>=1.0.0 configparser>=6.0.0 keyring>=24.2.0 watchdog>=3.0.0 slack-sdk>=3.25.0

# Create config directory
mkdir -p /etc/logmanticsai
mkdir -p ~/.config/logmanticsai/results

# Set permissions
chmod 755 /usr/bin/logmanticsai-*
chmod -R 755 /usr/lib/logmanticsai

# Register with update-alternatives
update-alternatives --install /usr/bin/logmanticsai logmanticsai /usr/bin/logmanticsai-cli 0

exit 0 